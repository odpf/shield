{
  "name": "shield",
  "version": "1.0.0",
  "description": "IAM with reverse proxy",
  "main": "server.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "lint": "./node_modules/.bin/eslint **/*.ts",
    "format": "node_modules/prettier/bin-prettier.js  --check '**/*.ts'",
    "format:fix": "yarn format --write",
    "build": "rm -rf ./build && tsc",
    "postbuild": "cpy --parents '**/*.conf' ./build/",
    "start": "node ./build/server.js",
    "dev": "nodemon --inspect=0.0.0.0:5858  -e ts --exec \"yarn build && yarn start\"",
    "test": "NODE_ENV=test lab --sourcemaps --transform node_modules/lab-transform-typescript --shuffle -l"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/glue": "^8.0.0",
    "@hapi/h2o2": "^9.0.2",
    "@hapi/hapi": "^20.0.3",
    "@hapi/hoek": "^9.1.0",
    "@hapi/inert": "^6.0.3",
    "@hapi/vision": "^6.0.1",
    "casbin": "^5.2.2",
    "casbin-pg-watcher": "^0.1.1",
    "confidence": "^5.0.0",
    "hapi-swagger": "^14.0.0",
    "joi": "^17.3.0",
    "lodash": "^4.17.20",
    "pg": "^8.5.1",
    "qs": "^6.9.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.29",
    "typeorm-adapter": "^1.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@hapi/lab": "^24.1.0",
    "@types/confidence": "^1.4.30",
    "@types/hapi__glue": "^6.1.2",
    "@types/hapi__h2o2": "^8.3.2",
    "@types/hapi__hapi": "^20.0.2",
    "@types/hapi__hoek": "^9.0.1",
    "@types/hapi__inert": "^5.2.2",
    "@types/hapi__joi": "^17.1.6",
    "@types/hapi__lab": "^22.0.1",
    "@types/hapi__vision": "^5.5.2",
    "@types/joi": "^14.3.4",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.11",
    "@types/qs": "^6.9.5",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "code": "^5.2.4",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "lab-transform-typescript": "^3.0.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rosie": "^2.0.1",
    "sinon": "^9.2.1",
    "typescript": "^4.1.2"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 80
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:import/typescript",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "prettier/prettier": "error",
      "no-unused-vars": "off",
      "func-names": "off",
      "global-require": "off",
      "camelcase": "off",
      "one-var": [
        "error",
        {
          "var": "always",
          "let": "always",
          "const": "never"
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "import/prefer-default-export": "off",
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "ts": "never"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn format"
    }
  }
}